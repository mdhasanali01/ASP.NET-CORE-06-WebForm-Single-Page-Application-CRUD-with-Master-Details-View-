@model IEnumerable<Publisher>
<table class="table table-bordered table-striped" id="publisherTable">
    <thead>
        <tr class="text-center bg-light">
            <th >
                @Html.DisplayNameFor(model => model.PublisherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="publisher_tr_@item.PublisherId">
                <td>
                    @Html.DisplayFor(modelItem => item.PublisherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                   <button type="button" class="btn btn-primary btn-sm rounded-2 edit" data-db-type="publisher" data-db-action="edit" data-publisher-id="@item.PublisherId" data-controller-action="EditPublisher"><i class="bi bi-pencil"></i>Edit</button>
                    <button type="button" class="btn btn-danger btn-sm rounded-2 del" data-db-type="publisher" data-db-action="del" data-publisher-id="@item.PublisherId" data-controller-action="DeletePublisher"><i class="bi bi-trash">Delete</i></button>
                </td>
            </tr>
        }
    </tbody>
</table>


