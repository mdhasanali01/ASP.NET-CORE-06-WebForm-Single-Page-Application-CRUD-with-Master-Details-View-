@model Publisher
<form id="f" name="f" data-db-type="publisher" data-db-action="edit" data-controller-action="EditPublisher">
    <input type="hidden" asp-for="PublisherId" />
    <div class="form-group row mb-1">
        <label asp-for="PublisherName" class="col-form-label col-3"></label>
        <div class="col-9">
            <input asp-for="PublisherName" class="form-control" />
            <span asp-validation-for="PublisherName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="Address" class="control-label col-3"></label>
        <div class="col-9">
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="Email" class="control-label col-3"></label>
        <div class="col-9">
            <input asp-for="Email" class="form-control col-2" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

</form>
