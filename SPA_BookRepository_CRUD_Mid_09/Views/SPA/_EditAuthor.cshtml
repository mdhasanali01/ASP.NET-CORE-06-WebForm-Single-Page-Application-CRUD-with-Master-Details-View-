@model Author


<form id="f" name="f" data-db-type="author" data-db-action="edit" data-controller-action="EditAuthor">
    <input type="hidden" asp-for="AuthorId" />
    <div class="form-group row mb-1">
        <label asp-for="AuthorName" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-4">
            <input  asp-for="AuthorName" class="form-control form-control-sm">
            <span asp-validation-for="AuthorName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="Address" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-4">
            <input asp-for="Address" class="form-control form-control-sm">

            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>

   
</form>