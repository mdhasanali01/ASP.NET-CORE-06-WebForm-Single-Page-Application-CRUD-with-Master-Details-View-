
@model BookEditModel
<form id="f" name="f" data-db-type="book" data-db-action="edit" data-controller-action="EditBook">
    <div class="row">
    <input type="hidden" asp-for="BookId" />
    <div class="form-group row mb-1">
        <label asp-for="BookName" class="col-form-label col-2"></label>
        <div class="col-10">
            <input asp-for="BookName" class="form-control" />
            <span asp-validation-for="BookName" class="text-danger"></span>
        </div>
    </div>
      <div class="form-group row mb-1">
        <label asp-for="PublishDate" class="col-form-label col-2"></label>
        <div class="col-10">
            <input type="text" asp-for="PublishDate" class="form-control date" />
            <span asp-validation-for="PublishDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="Price" class="control-label col-2"></label>
        <div class="col-10">
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
      <div class="form-group row mb-1">
        <label asp-for="Available" class="col-form-label col-2"></label>
        <div class="col-10">
            <input asp-for="Available" class="form-check" />
            <span asp-validation-for="Available" class="text-danger"></span>
        </div>
    </div>
      <div class="form-group row mb-1">
            <label asp-for="Topic" class="control-label col-2"></label>
            <div class="col-10">
                <select asp-for="Topic" 
                    class="form-control" 
                    asp-items="Html.GetEnumSelectList<Topic>()">
                <option>Select One</option>
            </select>
            <span asp-validation-for="Topic" class="text-danger"></span>
            </div>
     </div>
          <div class="row">
        <label asp-for="PublisherId" class="col-form-label col-2"></label>
        <div class="col-4">
            <select asp-for="PublisherId" class="form-select" asp-items="@(new SelectList(ViewData["Publishers"] as IEnumerable<Publisher>, "PublisherId", "PublisherName"))">
                <option value="" selected>Select one</option>
            </select>
            <span asp-validation-for="PublisherId" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group row mb-1">
                <label asp-for="Picture" class="control-label col-3"></label>
                <div class="col-9">
                    <input type="file" asp-for="Picture" class="form-control col-2" />
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
            </div>
            
             <div class="col-3">
            <img src="/Pictures/@ViewData["CurrentPic"]" style="width:150px" class="img-thumbnail" />
            </div>
        </div>
</form>