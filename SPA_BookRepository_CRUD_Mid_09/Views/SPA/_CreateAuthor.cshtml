@model Author
<form id="f" name="f" data-db-type="author" data-db-action="insert" data-controller-action="CreateAuthor">
    @*<input type="hidden" asp-for="AuthorId"  />*@
    <div class="form-group row mb-1">
        <label asp-for="AuthorName" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-4">
             <input  type="text" asp-for="AuthorName" class="form-control form-control-sm">
            <span asp-validation-for="AuthorName" class="text-danger"></span>
        </div>
    </div>   
    <div class="form-group row mb-1">
        <label asp-for="Address" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-4">
            <input  type="text" asp-for="Address" class="form-control form-control-sm">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>   
    <div id="items">
        <div class="d-flex justify-content-between mb-1">
            <h3>Books</h3>
            <div><button type="button" class="btn btn-primary btn-sm" id="addItemForm"><i class="bi bi-plus"></i></button></div>
        </div> 
        @await Html.PartialAsync("_CreateItem", 
        null,
        new ViewDataDictionary(this.ViewData)
         )
    </div>
</form>
